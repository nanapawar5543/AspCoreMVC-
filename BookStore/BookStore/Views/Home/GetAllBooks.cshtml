@model List<BookStore.Model.BookModel>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAllBooks</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.min.js"></script>
</head>
<body>
    <form method="post" action="SearchBooks">
        <input type="text" name="title" placeholder="Title" /><input type="text" name="author" placeholder="Author" />
        <button type="submit" class="btn btn-primary">Search</button>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>Book ID</th>
                <th>Book Title</th>
                <th>Book Author</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                <tr>
                    <td>@i.ID</td>
                    <td>@i.Title</td>
                    <td>@i.Author</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
